@using Resume.Domain.Entities.MySkills
@model MySkills

<div class="content-wrapper" style="min-height: 265.6px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">ویرایش توانمندی</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/AdminPanel">داشبورد ادمین</a></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">ویرایش توانمندی</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="EditMySkill" 
                        asp-area="AdminPanel" 
                        asp-controller="MySkills" method="post">
                        <input type="hidden" asp-for="Id" />
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">عنوان </label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="SkillTille" placeholder="عنوان مدرک تحصیلی را وارد کنید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">درصد توانمندی</label>
                                    <input type="number" class="form-control" id="exampleInputEmail1" asp-for="Percentage" placeholder="بازه ی زمانی دریافت مدرک را وارد کنید">
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

</div>