@model Reume.Application.DTOs.AdminSide.Experience.CreateExperienceAdminSideDTO

<div class="content-wrapper" style="min-height: 265.6px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">افزودن تجربه</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="/AdminPanel">داشبورد ادمین</a></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">ارسال اطلاعات تجربه </h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="CreateExperience" asp-area="AdminPanel" asp-controller="Experience" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="ExperienceTitle">عنوان تجربه </label>
                                    <input asp-for="ExperienceTitle" class="form-control" placeholder="عنوان تجربه را وارد کنید" />
                                    <span asp-validation-for="ExperienceTitle" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ExperienceDuration">بازه ی زمانی تجربه</label>
                                    <input asp-for="ExperienceDuration" class="form-control" placeholder="بازه ی زمانی تجربه را وارد کنید" />
                                    <span asp-validation-for="ExperienceDuration" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CompanyName">نام شرکت</label>
                                    <input asp-for="CompanyName" class="form-control" placeholder="نام شرکت را وارد کنید" />
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CompanySite">سایت شرکت</label>
                                    <input asp-for="CompanySite" class="form-control" placeholder=" سایت شرکت را وارد کنید" />
                                    <span asp-validation-for="CompanySite" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description">توضیحات </label>
                                    <input asp-for="Description" class="form-control" placeholder="توضیحات را وارد کنید" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">ارسال</button>
                            </div>
                        </form>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(false, " مقدار وارد شده نامعتبر است", new { @class = "alert alert-danger", style = "text-align: center;" })
                        }
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

</div>

